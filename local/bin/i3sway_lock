#!/bin/sh

source "$HOME/.config/themes/Pop-dark/colors.sh"

if [ "$XDG_SESSION_DESKTOP" == "i3" ]; then
  i3lock -i "$HOME/.config/wallpaper" \
    --indicator --clock -F \
    --inside-color "$BACKGROUND" \
    --insidever-color "$BACKGROUND" \
    --insidewrong-color "$BACKGROUND" \
    --keyhl-color "$BRIGHT_CYAN" \
    --line-color "$BACKGROUND" \
    --ring-color "$BACKGROUND" \
    --ringver-color "$BRIGHT_BLUE" \
    --ringwrong-color "$BRIGHT_RED" \
    --separator-color "$BACKGROUND" \
    --layout-color "$FOREGROUND" \
    --time-color "$FOREGROUND" \
    --date-color "$FOREGROUND" \
    --greeter-color "$FOREGROUND" \
    --verif-color "$FOREGROUND" \
    --wrong-color "$FOREGROUND" \
    --modif-color "$FOREGROUND" \
    --verif-text "verifying" \
    --wrong-text "wrong" \
    --noinput-text "cleared"
else
  swaylock -i "$HOME/.config/wallpaper" \
    --indicator --clock \
    --inside-color "$BACKGROUND" \
    --inside-clear-color "$BACKGROUND" \
    --inside-ver-color "$BACKGROUND" \
    --inside-wrong-color "$BACKGROUND" \
    --key-hl-color "$BRIGHT_CYAN" \
    --line-color "$BACKGROUND" \
    --line-clear-color "$BACKGROUND" \
    --line-ver-color "$BACKGROUND" \
    --line-wrong-color "$BACKGROUND" \
    --ring-color "$BACKGROUND" \
    --ring-clear-color "$BRIGHT_YELLOW" \
    --ring-ver-color "$BRIGHT_BLUE" \
    --ring-wrong-color "$BRIGHT_RED" \
    --separator-color "$BACKGROUND" \
    --text-color "$FOREGROUND" \
    --text-clear-color "$FOREGROUND" \
    --text-ver-color "$FOREGROUND" \
    --text-wrong-color "$FOREGROUND"
fi

