bindsym $mod+Ctrl+Left exec --no-startup-id playerctl previous
bindsym $mod+Ctrl+Right exec --no-startup-id playerctl next
bindsym $mod+Ctrl+Down exec --no-startup-id playerctl play-pause

bindsym XF86AudioRaiseVolume exec --no-startup-id $HOME/.local/bin/i3sway_volume up
bindsym XF86AudioLowerVolume exec --no-startup-id $HOME/.local/bin/i3sway_volume down
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym Ctrl+XF86AudioRaiseVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ +5%
bindsym Ctrl+XF86AudioLowerVolume exec --no-startup-id pactl set-source-volume @DEFAULT_SOURCE@ -5%
bindsym Ctrl+XF86AudioMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym XF86MonBrightnessUp exec $HOME/.local/bin/i3sway_brightness up
bindsym XF86MonBrightnessDown exec $HOME/.local/bin/i3sway_brightness down

bar {
  status_command SCRIPT_DIR=/usr/lib/i3blocks i3blocks
}

exec xcompmgr
exec_always xwallpaper --zoom $HOME/.config/wallpaper
exec_always $HOME/.config/i3/scripts/dunst.sh
exec_always $HOME/.config/i3/scripts/i3bar.sh
